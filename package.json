{
	"name": "eshop",
	"version": "1.0.0",
	"description": "An ecommerce app built with the MERN stack",
	"main": "server.js",
	"repository": "https://github.com/devsnb/eshop.git",
	"author": "Snehangshu Biswas <dev.snehangshu@gmail.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "node dist/server.js",
		"dev": "concurrently --names \"SERVER,CLIENT\" -c \"blue.bold,green.bold\" \"npm run server:dev\" \"npm run client:dev\"",
		"server:dev": "nodemon backend/server.ts",
		"client:dev": "cd frontend && npm run dev",
		"build": "npm run server:build && npm run client:build",
		"server:build": "tsc",
		"client:build": "cd frontend && npm run build",
		"data:import": "ts-node backend/seeder.ts",
		"data:destroy": "ts-node backend/seeder.ts -d",
		"server:install": "npm install",
		"client:install": "cd frontend && npm install",
		"prestart": "npm run server:build && npm run client:build"
	},
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"chalk": "4",
		"cookie-parser": "^1.4.6",
		"express": "^4.19.1",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.2.2",
		"multer": "^1.4.5-lts.1"
	},
	"devDependencies": {
		"@swc/core": "^1.4.8",
		"@types/bcryptjs": "^2.4.6",
		"@types/cookie-parser": "^1.4.7",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/mongoose": "^5.11.97",
		"@types/multer": "^1.4.11",
		"@types/node": "^20.11.30",
		"concurrently": "^8.2.2",
		"dotenv": "^16.4.5",
		"nodemon": "^3.1.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.3"
	}
}
